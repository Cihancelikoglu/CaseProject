@model CaseProject.Entity.Entities.Category

@{
    ViewData["Title"] = "CategoryUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CategoryUpdate</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
    </div>
</div>

<div class="col-xl-12 col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Kategori Ekle</h4>
        </div>
        <div class="card-body">
            <div class="basic-form">
                <form asp-action="CategoryUpdate">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Kategori Adı</label>
                        <div class="col-sm-9">
                            <input type="text" asp-for="CategoryName" class="form-control" placeholder="Kategori Adı">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Durumu</label>
                        <div class="col-sm-9 pl-5">
                            <input type="checkbox" asp-for="Status" class="form-check-input" value="true">Aktif
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
