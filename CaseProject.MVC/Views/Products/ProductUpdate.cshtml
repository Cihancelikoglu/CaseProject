@model Product

@{
    ViewData["Title"] = "ProductUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-xl-12 col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Ürün Düzenle</h4>
        </div>
        <div class="card-body">
            <div class="basic-form">
                <form asp-action="ProductAdd">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Ürün Adı</label>
                        <div class="col-sm-9">
                            <input type="text" asp-for="ProductName" class="form-control" placeholder="Ürün Adı">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Kategori Seçiniz</label>
                        <div class="col-sm-9">
                            <select class="form-control default-select" asp-for="CategoryId">
                                @foreach (var item in ViewBag.category)
                                {
                                    <option value="@item.Id">@item.CategoryName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Ürün Fiyatı</label>
                        <div class="col-sm-9">
                            <input type="text" asp-for="Price" class="form-control" placeholder="Ürün Fiyatı">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Açıklama</label>
                        <div class="col-sm-9">
                            <input type="text" asp-for="Description" class="form-control" placeholder="Açıklama">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Tarih</label>
                        <div class="col-sm-9">
                            <input type="datetime-local" asp-for="Date" class="form-control" placeholder="Tarih">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Durumu</label>
                        <div class="col-sm-9 pl-5">
                            <input type="checkbox" asp-for="Status" class="form-check-input" value="true" checked>Aktif
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
