@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Ürünler</h4>
                <a class="btn btn-primary" asp-controller="Products" asp-action="ProductAdd">Ürün Ekle</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="display min-w850">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Ürün Başlık</th>
                                <th>Kategori</th>
                                <th>Price</th>
                                <th>Date</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in ViewBag.product)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.CategoryId</td>
                                        <td>@item.Price</td>
                                        <td>@item.Date</td>
                                        <td>
                                            @if (@item.Status == true)
                                            {
                                                <a href="/Products/IsStatus/@item.Id" class="badge badge-rounded badge-success">Aktif</a>
                                            }
                                            else
                                            {
                                                <a href="/Products/IsStatus/@item.Id" class="badge badge-rounded badge-danger">Pasif</a>
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex">
                                                <a href="/Products/ProductUpdate/@item.Id" class="btn btn-primary shadow btn-xs sharp mr-1"><i class="fa fa-pencil"></i></a>
                                                <a href="/Products/ProductDelete/@item.Id" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>