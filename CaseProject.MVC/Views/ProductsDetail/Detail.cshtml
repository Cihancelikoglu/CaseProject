@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Product
<!-- Add Order -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-xl-3 col-lg-6  col-md-6 col-xxl-5 ">
                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade show active" id="first">
                                <img class="img-fluid" src="~/Uploads/Images/@Model.Image" alt="@Model.ProductName">
                            </div>
                        </div>
                    </div>
                    <!--Tab slider End-->
                    <div class="col-xl-9 col-lg-6  col-md-6 col-xxl-7 col-sm-12">
                        <div class="product-detail-content">
                            <!--Product details-->
                            <div class="new-arrival-content pr">
                                <h4>@Model.ProductName</h4>
                                <div class="d-table mb-2">
                                    <p class="price float-left d-block">@Model.Price TL</p>
                                </div>
                                <p>
                                    Availability: <span class="item">
                                        In stock <i class="fa fa-shopping-basket"></i>
                                    </span>
                                </p>
                                <p>Ürün code: <span class="item">@Model.Id</span> </p>
                                <p>Kategori: <span class="item">@ViewBag.category</span></p>
                                <p>
                                    @Model.Description
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

