@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @foreach (var item in ViewBag.product)
    {
        if (item.Status == true)
        {
            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <div class="new-arrival-product">
                            <a href="/ProductsDetail/Detail/@item.Id">
                                <div class="new-arrivals-img-contnent">
                                    <img class="img-fluid" src="~/Uploads/Images/@item.Image" alt="@item.ProductName">
                                </div>
                                <div class="new-arrival-content text-center mt-3">
                                    <h4><a href="/ProductsDetail/Detail/@item.Id">@item.ProductName</a></h4>
                                    <span class="price">@item.Price Tl</span>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>